{
  "name": "sysv-semaphore",
  "version": "0.1.0",
  "description": "node bindings for Unix System V Semaphores",
  "main": "index.js",
  "scripts": {
    "test": "node node_modules/jest/bin/jest.js",
    "test:inspect": "node --inspect-brk node_modules/jest/bin/jest.js --runInBand --testTimeout=60000 --collectCoverage=false",
    "build:debug": "node-gyp rebuild --debug",
    "prepare": "husky",
    "build-darwin": "prebuildify --napi --strip --arch arm64 && prebuildify --napi --strip --arch x64",
    "build-linux": "bash ./scripts/build-linux.sh",
    "build": "npm run build-darwin && npm run build-linux",
    "install": "node-gyp-build",
    "format": "clang-format -i --glob='./src/**/*.{h,c,cpp}'; prettier --write './**/*.{js,mjs,cjs,jsx,json,md}'",
    "lint": "eslint src",
    "install:gtest": "./scripts/install-gtest.sh"
  },
  "dependencies": {
    "clang-format": "1.8.0",
    "colors": "1.4.0",
    "debug": "4.3.4",
    "node-addon-api": "*",
    "node-gyp-build": "4.8.4"
  },
  "author": "Jon Cooke, Reactivation Limited",
  "license": "ISC",
  "gypfile": true,
  "devDependencies": {
    "@eslint/js": "9.2.0",
    "eslint": "8.57.0",
    "eslint-plugin-jest": "28.5.0",
    "globals": "15.1.0",
    "husky": "9.0.11",
    "jest": "29.7.0",
    "lint-staged": "15.2.2",
    "node-gyp": "11.1.0",
    "prebuildify": "6.0.1",
    "prettier": "3.2.5"
  },
  "lint-staged": {
    "**/*.{js,mjs,cjs}": [
      "eslint --fix"
    ],
    "src/**/*.{h,c,cpp}": [
      "clang-format -i"
    ],
    "**/*.{js,mjs,cjs,jsx,json,md}": [
      "prettier --write"
    ]
  }
}
